using System;

namespace Ex2FlowControl_PasswordExercise
{
    class Program
    {
        static void Main(string[] args)
        {
            string username;
            string password;
            int counter = 0;
            do
            {
                Console.Write("Username: ");
                username = Console.ReadLine();
                Console.Write("Passoword: ");
                password = Console.ReadLine();
                    if (username != "tolga" || password != "181217018")
                        Console.WriteLine("Username or password is incorrect.Try again.");
            }
            while (username != "tolga" || password != "181217018");
            Console.WriteLine("You logged in successfully.");
            Console.ReadLine();
        }
        
    }
